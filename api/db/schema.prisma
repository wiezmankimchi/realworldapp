model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id                  String     @id @default(cuid())
  firstName           String?
  lastName            String?
  ProfileImage        String?
  email               String     @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  userRoles           UserRole[]
  updatedAt           DateTime   @updatedAt
  createdAt           DateTime   @default(now())
}

model UserRole {
  id        String      @id @default(cuid())
  name      UserType @default(public)
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])
}

// --------------------
// Enums
// --------------------

enum UserType {
  admin
  employee
  external
  public
  editor
  publisher
}
